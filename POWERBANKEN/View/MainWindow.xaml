<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="Hovedvindue" Height="700" Width="1500">

    <Grid>
        <StackPanel VerticalAlignment="Top">
            <Menu Width="Auto" Height="20">
                <MenuItem Header="_Filer">
                    <MenuItem x:Name="AppExit" Header="Gem og luk" HorizontalAlignment="Left" Width="170" Click="btn_Close_Click"/>
                    <MenuItem x:Name="CSVread" Header="Indlæs salgsdata" HorizontalAlignment="Left" Width="180" Click="btn_ImportProductSales"/>
                    <MenuItem x:Name="AddProduct" Header="Tilføj produkt" HorizontalAlignment="Left" Width="170" Click="AddProduct_Click"/>
                </MenuItem>
                <MenuItem Header="Instillinger">
                    <MenuItem x:Name="Settings" Header="Indstillinger" HorizontalAlignment="Left" Width="170" Click="Settings_Click"/>
                </MenuItem>
                <MenuItem Header="_Hjælp">
                    <MenuItem x:Name="About" Header="&amp;About" HorizontalAlignment="Left" Width="140"/>
                </MenuItem>
            </Menu>
        </StackPanel>
        <DataGrid x:Name="dGrid_products" CanUserAddRows="False" HorizontalAlignment="Left" Height="500" Margin="10,31,0,0" VerticalAlignment="Top" Width="auto" MaxWidth="900" AutoGenerateColumns="False" ItemsSource="{Binding SelectedProducts, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.RowSpan="4" SelectionChanged="dGrid_products_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding SKU}" Header="SKU" Width="auto" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Name}" Header="Varenavn"  Width="auto"/>
                <DataGridTextColumn Binding="{Binding PurchasePrice}" Header="Indkøbspris"  Width="auto"/>
                <DataGridTextColumn Binding="{Binding Type.TypeName}" Header="Produktkategori"  Width="auto" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Brand.Name}" Header="Brand"  Width="auto" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding StockAmount}" Header="Lagerbeholdning (stk)"  Width="auto"/>
                <DataGridTextColumn Binding="{Binding MinStock}" Header="Min beholdning (stk)"  Width="auto"/>
                <DataGridTextColumn Binding="{Binding LeadTimeDays}" Header="Leadtime"  Width="auto"/>

                <DataGridCheckBoxColumn Binding="{Binding IsActive}"  Header="Aktiv" Width="auto" />
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btn_SaveAndClose" Content="Gem"  HorizontalAlignment="Left" Margin="306,612,0,0" VerticalAlignment="Top" Width="109" Click="btn_SaveAndClose_Click" Height="21"   />
        <Button x:Name="btn_ChangeGridSource" Content="Vis (de)aktiverede varer"  HorizontalAlignment="Left" Margin="74,608,0,0" VerticalAlignment="Top" Width="225" Height="26" Click="btn_ChangeGridSource_Click"   />
        <TextBox x:Name="Tb_SearchBox" HorizontalAlignment="Left" Height="25" Margin="184,570,0,0" TextWrapping="Wrap" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="231" TextChanged="Tb_SearchBox_TextChanged" />
        <Label Content="Søg:" HorizontalAlignment="Left" Margin="131,570,0,0" VerticalAlignment="Top" Width="46" Height="28"/>
        <Button x:Name="Btn_VareStatistic" Content="'vis'" HorizontalAlignment="Left" VerticalAlignment="Top" Width="145" Margin="1112,87,0,0" Height="30" FontSize="20" Click="Btn_VareStatistic_Click"/>
        <Label x:Name="lbl_Statistic" Content="Varestatistik" HorizontalAlignment="Left" Margin="921,84,0,0" VerticalAlignment="Top" Height="65" Width="168" FontSize="20"/>
        <Label x:Name="lbl_Statistic_Copy" Content="Statistik" HorizontalAlignment="Left" Margin="944,202,0,0" VerticalAlignment="Top" Height="51" Width="168" FontSize="20"/>
        <Button x:Name="Btn_Graph" Content="'vis'" HorizontalAlignment="Left" VerticalAlignment="Top" Width="145" Margin="1112,205,0,0" Height="30" FontSize="20" Click="Btn_Graph_Click"/>
        <Button Content="{Binding OrderDates.Count}" FontSize="20"  HorizontalAlignment="Left" Margin="1182,25,0,0" VerticalAlignment="Top" Width="75" Height="33" Click="Btn_Notifications_Click" />
        <Label Content="Kommende bestillinger" HorizontalAlignment="Left" Margin="921,22,0,0" VerticalAlignment="Top" Height="33" Width="234" FontSize="20"/>
        <!--<WebBrowser HorizontalAlignment="Left" Height="341" Margin="921,272,0,0" VerticalAlignment="Top" Width="561" Source="http://servlet.dmi.dk/byvejr/servlet/byvejr_dag1?by=5000" />-->
    </Grid>

</Window>
