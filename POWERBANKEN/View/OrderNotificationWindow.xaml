<Window x:Class="View.OrderNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="OrderNotificationWindow" Height="450" Width="441.385">
    <Grid>
        <ListView HorizontalAlignment="Left" Height="339" Margin="10,70,0,0" VerticalAlignment="Top" Width="413" ItemsSource="{Binding OrderDates,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="SKU" DisplayMemberBinding="{Binding Key.SKU}" Width="auto"/>
                    <GridViewColumn Header="Varenavn" DisplayMemberBinding="{Binding Key.Name}" Width="auto"/>
                    <GridViewColumn Header="Bestillingsdato" DisplayMemberBinding="{Binding Value, StringFormat={}{0:dd/MM/yyyy}}" Width="auto"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Bestillinger de næste 14 dage" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="37" Width="398" FontSize="20"/>

    </Grid>
</Window>
